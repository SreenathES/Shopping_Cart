<section class="container mt-5">
  <form action="/signup" method="POST">
    <h1 class="form-label text-center mb-4">Create new account</h1>
    <div class="form-group mb-3">
      <label class="form-label">Name</label>
      <input type="text" class="form-control" name="Name">
    </div>
    <div class="form-group mb-3">
      <label class="form-label">Email address</label>
      <input type="email" class="form-control" name="Email" aria-describedby="emailHelp">
    </div>
    <div class="form-group mb-3">
      <label class="form-label">Password</label>
      <input type="password" class="form-control" name="Password">
    </div>
    <div class="form-group">
      <a href="/login" class="text-decoration-none link-primary">Already have account?</a>
      <button type="submit" class="btn btn-primary w-25" style="float: right;">Sign-up</button>
    </div>
  </form>
</section>