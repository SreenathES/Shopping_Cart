<section class="container mt-5">
  <form action="/login" method="POST">
    <h1 class="form-label text-center mb-4">Login</h1>
    {{#if loginErr}}
    <p class="error text-danger">{{loginErr}}</p>
    {{/if}}
    <div class="form-group mb-3">
      <label for="email" class="form-label">Email address</label>
      <input type="email" class="form-control" id="email" name="Email" aria-describedby="emailHelp">
    </div>
    <div class="form-group mb-3">
      <label for="password" class="form-label">Password</label>
      <input type="password" class="form-control" id="password" name="Password">
    </div>
    <div class="form-group">
      <a href="/signup" class="text-decoration-none link-primary">Create new account?</a>
      <button type="submit" class="btn btn-primary w-25" style="float: right;">Login</button>
    </div>
  </form>
</section>