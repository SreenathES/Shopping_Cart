<section>
    <div class="container">
        <div class="mt-4 row d-flex justify-content-end">
            <a href="/admin/add-product" class="btn btn-success w-25 ">Add Products</a>
        </div>
        <div class="mt-5">
        <table class="table mt-5" id="productTable">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th scope="col">Image</th>
                    <th scope="col">Options</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <td>{{this.Name}}</td>
                    <td>{{this.Category}}</td>
                    <td>{{this.Description}}</td>
                    <td>{{this.Price}}</td>
                    <td><img style="width: 50px;height: 50px" src="/product-images/{{this._id}}.jpg" alt=""></td>
                    <td>
                        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
                            onclick="return confirm('Are you want to delete {{this.Name}} ?')">Delete</a>
                    </td>

                </tr>
                {{/each}}
            </tbody>
        </table>
        </div>
    </div>
</section>
<script>
    $(function (){
        $('#productTable').DataTable();
    })
</script>